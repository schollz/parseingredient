		cb.css('top',offset.top+'px');
		cb.css('left',offset.left+'px');
		cb.css('height','auto');
		cb.css('width', 'auto');
		cb.fadeIn('fast');
		$("#lights-out").fadeIn('fast');

		//window.location = "/recipes/recipe/51913/add_photo";
	});

