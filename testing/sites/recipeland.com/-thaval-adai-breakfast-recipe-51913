<script type="text/javascript">
$("#lights-out").click(function(){
  $("#lights-out").fadeOut();
  $("#sign-in").fadeOut();
  $(".dialog").fadeOut();
});


var s_menu_showing = false;

$("#u-r-set").click(function(){
  $("#sign-in").hide();
  if (s_menu_showing == false) {
    s_menu_showing = true;
    $("#u-r-set").addClass("bs-s-act");
    $("#mnu-set").show();   
  } else {
    s_menu_showing = false;    
    $("#u-r-set").removeClass("bs-s-act");
    $("#mnu-set").hide();
  }
}); 

$("#m-i-s-settings").click(function(){
  $("#bs-s-spin").show();
  $("#u-r-set").removeClass("bs-s-act");
  $("#mnu-set").fadeOut("slow");
  window.location = "/chef/settings";  
});

$("#m-i-s-logout").click(function(){
  $("#bs-s-spin").show();
  $("#u-r-set").removeClass("bs-s-act");
  $("#mnu-set").fadeOut("slow");
  window.location = "/signout";  
});

function showLogin() {
  $("#mnu-set").hide();
  $("#sign-in").fadeIn("fast");
  var lb = $("#sign-in");
  $("#lights-out").show();
  lb.css("top", Math.max(0, (($(window).height() - $(lb).outerHeight()) / 2) + $(window).scrollTop()) + "px");
  lb.css("left", Math.max(0, (($(window).width() - $(lb).outerWidth()) / 2) +  $(window).scrollLeft()) + "px");

  $("#name").focus();
}
$("#u-r-login").click(function(e){
  showLogin();
  e.preventDefault();
});
$("#m-i-s-login").click(function(){
  showLogin();
});
$("#m-i-s-login-fb").click(function(){
  $("#bs-s-spin").show();
  $("#u-r-set").removeClass("bs-s-act");
  $("#mnu-set").fadeOut("slow");
  window.location = "/auth/facebook";  
});
