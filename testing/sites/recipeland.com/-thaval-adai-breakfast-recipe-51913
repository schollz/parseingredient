var wigS=400, wigH=5;
wiggle(wigS, wigH);

$('#u-r-set').hover(function(){
  $(this).stop().animate({top:0},100);
},function(){
  //wiggle(wigS, wigH);
});


function wiggle(wigSpeed, wigHt) {
  var $elem = $('#u-r-set'),wigS=wigSpeed, wigH=wigHt;    

    $elem.animate({
        top: wigH
    }, wigS, function() {
        $elem.animate({
            top: 0
        }, wigS, function() {
            wiggle(wigS, wigH);
        });
    });

    setTimeout( function(){
      $("#u-r-set").stop().animate({top:0},100);
    }, 5000);
  
  }

</script>

